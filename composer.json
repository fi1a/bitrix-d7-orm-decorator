{
  "name": "fi1a/bitrix-d7-orm-decorator",
  "type": "library",
  "description": "Классы декораторы для 1С-Битрикс D7 ORM",
  "keywords": [],
  "homepage": "https://github.com/fi1a/bitrix-d7-orm-decorator",
  "license": "MIT",
  "authors": [
    {
      "name": "Nikolay Gorohovsky",
      "email": "fi1a@icloud.com"
    }
  ],
  "require": {
    "php": "^7.3 || ^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.3",
    "slevomat/coding-standard": "^6.3",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "suggest" : {
  },
  "autoload": {
    "psr-4": {
      "Fi1a\\BitrixD7OrmDecorator\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Fi1a\\Unit\\BitrixD7OrmDecorator\\": "tests"
    }
  },
  "scripts": {
    "fl:lint": "phpcs --cache=build/cache/phpcs.cache",
    "fl:phpcbf": "phpcbf --cache=build/cache/phpcs.cache"
  },
  "scripts-descriptions": {
    "fl:lint": "Проверяет весь исходный код на соответсвие стандартам.",
    "fl:phpcbf": "Поправляет весь исходный код на соответсвие стандартам."
  }
}